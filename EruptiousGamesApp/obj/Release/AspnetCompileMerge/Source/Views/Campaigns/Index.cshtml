@model IEnumerable<EruptiousGamesApp.Entities.Campaign>

@{
    ViewBag.Title = "Index";
    <link href="~/Content/adminForms.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
}


<div class="mainContent">
    <div class="form-basic">


            <h2>Index</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>

            <table class="table shadow overflow-auto">
                <tr class="thead-dark">
                    <th>
                        @Html.DisplayNameFor(model => model.CamName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Inventory)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CamName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inventory)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CamID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.CamID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.CamID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
