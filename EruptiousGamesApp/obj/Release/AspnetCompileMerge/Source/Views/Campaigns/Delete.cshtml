@model EruptiousGamesApp.Entities.Campaign

@{
    ViewBag.Title = "Delete Campaign";
}

<hr />
<h3>Deleting campaign: <i>@Html.DisplayFor(model => model.CamName)</i></h3>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            Campaign Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CamName)
        </dd>

        <dt>
            Start Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            End Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            Inventory
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Inventory)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
