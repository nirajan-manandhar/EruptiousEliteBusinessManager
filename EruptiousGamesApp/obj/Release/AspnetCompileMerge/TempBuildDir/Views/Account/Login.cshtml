@using EruptiousGamesApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<br /><br />
      
      <div class="card text-center" style="margin:5%;">
          <img src='@Url.Content("~/Content/Images/Logo.png")' style="width:50%; height:auto; margin:10px" />
          <div class="card-body" style="margin:10%;">
              <div class="row">
                  @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                  {
                      @Html.AntiForgeryToken()
                      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                      <div class="form-group" >
                          <h4>@Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label", @style = "text-align:right" })</h4>
                          <div class="col-md-9">
                              @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @style = "margin:auto" })
                              @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                          </div>
                      </div>
                      <div class="form-group">
                          <h4>@Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label", @style = "text-align:right" })</h4>
                          <div class="col-md-9">
                              @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "margin:auto" })
                              @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                          </div>
                      </div>

                      <div class="form-group">
                          <div class="col-md-offset-2 col-md-10">
                              <input type="submit" value="Log in" class="btn btn-default" style="align-items:flex-end"/>
                          </div>
                      </div>

                  }
              </div>
          </div>

      </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}