@model IEnumerable<EruptiousGamesApp.Entities.Request>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <tr class="thead-dark">
            <th>
                Campaign Name
            </th>
            <th>
                Employee Name
            </th>
            <th>
                Date and Time
            </th>
            <th>
                Amount of Decks
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
]        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Campaign.CamName)
            </td>
            <td>                
                @Html.DisplayFor(modelItem => item.Employee.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "ChangeStatus", new { id = item.RequestID }) |
                @Html.ActionLink("Details", "Details", new { id = item.RequestID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RequestID })
            </td>
        </tr>
}

    </table>
</div>
