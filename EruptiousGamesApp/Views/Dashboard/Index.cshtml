                                    <div class="header">
                                        <h4 class="title">Total Customers</h4>
                                        <p class="category">Customers you have served</p>
                                    </div>
                                    <div class="content">
                                        <h1>
                                            @Html.DisplayFor(m => Model.personalPlayed)
                                        </h1>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card" style="text-align:center">

                                    <div class="header">
                                        <h4 class="title">Total Decks</h4>
                                        <p class="category">Decks you have sold</p>
                                    </div>
                                    <div class="content">
                                        <h1>
                                            @Html.DisplayFor(m => Model.personalSale)
                                        </h1>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card" style="text-align:center">

                                    <div class="header">
                                        <h4 class="title">Total Customer Feedback</h4>
                                        <p class="category">Customer feedback you have collected</p>
                                    </div>
                                    <div class="content">
                                        <h1>
                                            @Html.DisplayFor(m => Model.personalInfoCollected)
                                        </h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
