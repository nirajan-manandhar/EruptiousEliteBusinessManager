@model EruptiousGamesApp.Controllers.NotesController.WorkSession

@{
    ViewBag.Title = "Create";
    <link href="~/Content/form.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
}

<script>
    function ClickOnce(button) {
        let newbutton = button.cloneNode(true);
        newbutton.disabled = true;

        button.parentNode.insertBefore(newbutton, button);
        button.style.display = "none";
    }

</script>

<style>
    textarea {
    width : 100%;
    height : 100px;
}
</style>

<div class="mainContent">
    <div class="form-basic">
        <img class="mb-4" src='@Url.Content("~/Content/Images/feedbackButton.png")' style="width:80%;display: block; margin-left: auto; margin-right: auto;">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal shadow" style="padding:10px;">

                <div class="form-group">
                    @Html.LabelFor(model => model.note.Title, htmlAttributes: new { @class = "control-label col-md-2 arial" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.note.Title, new { htmlAttributes = new { @class = "form-control"} })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.note.Comment, htmlAttributes: new { @class = "control-label col-md-2 arial" })
                    <div class="col-md-10">
                            @Html.TextAreaFor(model => model.note.Comment, new { htmlAttributes = new { @class = "form-control"}})
                        </div>
                    </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.work.CustomerPlayWith, "Customers Played With", htmlAttributes: new { @class = "control-label col-md-2 arial" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.work.CustomerPlayWith, new { htmlAttributes = new { @class = "form-control", @Value = 0 } })
                        @Html.ValidationMessageFor(model => model.work.CustomerPlayWith, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.work.Sold, htmlAttributes: new { @class = "control-label col-md-2 arial" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.work.Sold, new { htmlAttributes = new { @class = "form-control", @Value = 0 } })
                        @Html.ValidationMessageFor(model => model.work.Sold, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-light shadow" onclick="ClickOnce(this)">
                            <img src="~/Content/Images/submitButton.png" style="max-width:120px" />
                        </button>
                    </div>

                </div>
            </div>
        }


    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
