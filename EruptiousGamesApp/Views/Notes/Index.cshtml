@model EruptiousGamesApp.Controllers.NotesController.Notes

@{
    ViewBag.Title = "Index";
}

<script>
    let noteID = 0;
    function modalClicked(val) {
        noteID = val;
    }
    function post() {
        window.location.href = "Notes/DeleteNote?id=" + noteID;
    }
</script>

<style>
    .colored {
        background-color: lightgrey;
    }

    .left {
        width: 30%
    }

    table, th, td, tr {
        border: 2px solid grey;
        border-collapse: collapse;
    }

    div.scrollable {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: auto;
    }

    table {
        table-layout: fixed;
        height: 50px;
    }

    .hidden {
        display: none;
    }

    .show {
        display: block;
    }
</style>

<h2>Index</h2>

@foreach (var item in Model.notes.Reverse())
{
    <table class="table">
        <tr>
            <td class="colored left">
                @Html.DisplayNameFor(model => item.Title):
            </td>
            <td rowspan="6">
                <div class="scrollable">
                    @Html.DisplayFor(modelItem => item.Comment)
                </div>
            </td>
        </tr>
        <tr>
            <td class="left">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
        </tr>
        <tr>
            <td class="colored left">
                @Html.DisplayNameFor(model => item.Employee.EmpName):
            </td>
        </tr>
        <tr>
            <td class="left">
                @Html.DisplayFor(modelItem => item.Employee.EmpName)
            </td>
        </tr>
        <tr>
            <td class="colored left">
                @Html.DisplayNameFor(model => item.DateTime):
            </td>
        </tr>
        <tr>
            <td class="left">
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
        </tr>
    </table>
    if (Model.emp.Role >= EruptiousGamesApp.Entities.Role.ADMIN)
    {
        <button value="@item.NoteID" onclick="modalClicked(this.value)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            Delete
        </button>
        <br />
        <br />
        <br />
    }
}

@if (Model.emp.Role >= EruptiousGamesApp.Entities.Role.ADMIN)
{
    <!-- The Modal -->
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Are you sure you want to delete this note?
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" onclick="post();this.disabled = true;">Confirm</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
}

