@model EruptiousGamesApp.Models.ApplicationUser

@{
    ViewBag.Title = "Edit Account";
    <link href="~/Content/adminForms.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
}

@section crumbContent{
    <span>
        <img class="mb-4" src='@Url.Content("~/Content/Images/adminFunctions.png")' style="width:20%; max-width:60px; margin:5px;">
        @Html.ActionLink("Accounts", "AccountList", "Account", null, new { @class = "h5", @style = "display: inline-block" })
        ⮞
        @Html.ActionLink("Edit", "AccountEdit", "Account", null, new { @class = "h5", @style = "display: inline-block" })
    </span>
}

<div class="card shadow w3-animate-bottom">
    <div class="card-header  text-center">
        <img src="~/Content/Images/account.png" style="width:20%; max-width:80px" />
        <h2 class="arial">@ViewBag.Title.</h2>
        <h5>Editing: <i>@Html.DisplayFor(model => model.Employee.EmpName)</i></h5>

    </div>
    <div class="card-body arial">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Employee.EmpID)

                <div class="form-group">
                    <label style="margin-left:15px">Employee Name</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Employee.EmpName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Employee.EmpName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Employee.Role, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EnumDropDownListFor(model => model.Employee.Role, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Employee.Role, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label style="margin-left:15px">Employee Status</label>
                    <div class="col-md-12">
                        @Html.EnumDropDownListFor(model => model.Employee.EmpStatus, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Employee.EmpStatus, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label style="margin-left:15px">Decks on Hand</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Employee.DecksOnHand, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Employee.DecksOnHand, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success btn-md" />
                    </div>
                </div>
            </div>
        }
        </div>
</div>
