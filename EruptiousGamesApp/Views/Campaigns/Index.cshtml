@model IEnumerable<EruptiousGamesApp.Entities.Campaign>

@{
    ViewBag.Title = "Campaigns";
    <link href="~/Content/adminForms.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
}

@section crumbContent{
    <span>
        <img class="mb-4" src='@Url.Content("~/Content/Images/adminFunctions.png")' style="width:20%; max-width:60px; margin:5px;">
        @Html.ActionLink("Campaigns", "Index", "Campaigns", null, new { @class = "h3", @style = "display: inline-block" })
    </span>
}

<div style="margin-top:5%">
    

    <div class="card text-center shadow w3-animate-left">
        <div class="card-header">
            <img src="~/Content/Images/campaign.png" style="width:20%; max-width:80px" />
            <h2 class="arial">Campaigns</h2>
        </div>
        <div class="card-body arial">
            <h2>Quick Actions</h2>
            <div class="form-group">
                @Html.ActionLink("Create Campaign", "Create", "Campaigns", null, new { @class = "btn btn-success btn-md shadow" })
            </div>
        </div>
    </div>

    <hr />
    <div class="card text-center shadow  w3-animate-bottom">
        <div class="card-header">
            <h2 class="arial" style="color:green">Open Campaigns</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <tr class="thead-dark">
                        <th>
                            <p>Campaign Name</p>
                        </th>
                        <th>
                            <p>Start Date</p>
                        </th>
                        <th>
                            <p>End Date</p>
                        </th>
                        <th>
                            <p>Inventory</p>
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Where(i => i.EndDate >= DateTime.Today))
                    {
                        <tr>
                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.CamName)
                            </td>
                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Inventory)
                            </td>
                            <td style="white-space:nowrap">
                                @Html.ActionLink("Edit", "Edit", new { id = item.CamID }) |
                                @Html.ActionLink("Assign", "AssignEmp", new { id = item.CamID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.CamID })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    <hr />

    <div class="card text-center shadow w3-animate-bottom">
        <div class="card-header">
            <h2 class="arial" style="color:indianred">Closed Campaigns</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive table-bordered">
                <table class="table">
                    <tr class="thead-dark">
                        <th>
                            <p>Campaign Name</p>
                        </th>
                        <th>
                            <p>Start Date</p>
                        </th>
                        <th>
                            <p>End Date</p>
                        </th>
                        <th>
                            <p>Inventory</p>
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Where(i => i.EndDate < DateTime.Today))
                    {
                        <tr>
                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.CamName)
                            </td>
                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Inventory)
                            </td>
                            <td style="white-space:nowrap">
                                @Html.ActionLink("Edit", "Edit", new { id = item.CamID }) |
                                @Html.ActionLink("Assign", "AssignEmp", new { id = item.CamID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.CamID })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

